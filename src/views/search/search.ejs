<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search | Instagram</title>
    <link rel="stylesheet" href="css/search.css" />
    <link rel="shortcut icon" href="https://b-sample-work-space.storage.c2.liara.space/instagram/insta_icon.png" type="image/x-icon" />
  </head>

  <body>
    <div class="container">
      <h1 class="title">users:</h1>
      <div class="result d-flex">
        <% if(result.length > 0) {%> <% result.forEach(user => {%>
        <div class="user-container p-5">
          <div class="user-img">
            <% if(user.avatar) {%>
            <a href="/profile/<%= user.username %>">
              <img class="users-img" src="<%= user.avatar %>" alt=""
            /></a>
            <%} else {%>
            <a href="/profile/<%= user.username %>">
              <img class="users-img" src="/profiles/no_profile.png" alt=""
            /></a>
            <%} %>
          </div>
          <div class="user-username"><%= user.username %></div>
        </div>
        <% }) %> <%} else {%>
        <div class="alert alert-danger mt-5 w-100">no user found</div>
        <%} %>
      </div>
    </div>
  </body>
</html>
