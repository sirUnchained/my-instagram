<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram | Login</title>

    <link rel="stylesheet" href="/css/login.css" />
  </head>

  <body>
    <div id="content-container">
      <section class="user">
        <div class="login-container">
          <h1 class="instagram-logo-box" style="font-size: 2rem;">Instagram</h1>
          <h2 class="instagram-logo-box" style="font-size: 1.5rem">
            forget password
          </h2>
          <p>enter your email address</p>
          <form id="login-post" method="POST" action="/auth/forget-password">
            <div class="inputs-container">
              <input type="email" name="email" placeholder="email" />
            </div>
            <button type="submit" class="login-button">send email</button>
          </form>
          <a class="password-forgot" href="/auth/login">login</a>
        </div>
      </section>
    </div>
    <script src="/vendor/sweetalert_v2/sweetalert_v2.js"></script>
    <script>
      if ("<%= locals.messages?.err %>") {
        swal.fire({
          title: "<%= locals.messages?.err %>",
          icon: "error",
          button: "ok",
        });
      }
      if ("<%= locals.messages?.succ %>") {
        swal.fire({
          title: "<%= locals.messages?.succ %>",
          icon: "success",
          button: "ok",
        });
      }
    </script>
  </body>
</html>
